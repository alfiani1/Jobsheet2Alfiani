<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/biodata"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="32dp"
        android:background="@color/design_default_color_secondary_variant"
        android:gravity="center"
        android:text="@string/BIODATA"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/MyProfile"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/alfiani"
        android:contentDescription="@string/my_image"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="32dp"
        android:background="@color/design_default_color_secondary_variant"
        android:gravity="center"
        android:text="@string/name"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/nim"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="32dp"
        android:background="@color/design_default_color_secondary_variant"
        android:gravity="center"
        android:text="@string/nim"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/prodi"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="32dp"
        android:background="@color/design_default_color_secondary_variant"
        android:gravity="center"
        android:text="@string/prodi"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/universitas"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="32dp"
        android:background="@color/design_default_color_secondary_variant"
        android:gravity="center"
        android:text="@string/universitas"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"/>


</LinearLayout>